<Keyboard
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:keyWidth="14%p"
    android:keyHeight="54dip" >

    <!-- | 7  || 8  || 9  |  | A  || B  || C  | -->
    <!-- | 4  || 5  || 6  |  | D  || E  || F  | -->
    <!-- | 1  || 2  || 3  |  | <  || >  || ENT| -->
    <!-- | 00 || 0  || FF |  | DEL|| CLR|| HID| -->

    <!-- | 7  || 8  || 9  |  | A  || B  || C  | -->
    <Row>
        <Key android:codes="55"    android:keyLabel="7" android:keyEdgeFlags="left" android:isRepeatable="true"/>
        <Key android:codes="56"    android:keyLabel="8" android:isRepeatable="true"/>
        <Key android:codes="57"    android:keyLabel="9" android:isRepeatable="true"/>

        <Key android:codes="65" android:keyLabel="A" android:isRepeatable="true" android:horizontalGap="10%p" />
        <Key android:codes="66" android:keyLabel="B" android:isRepeatable="true"  />
        <Key android:codes="67" android:keyLabel="C" android:isRepeatable="true"  />
    </Row>

    <!-- | 4  || 5  || 6  |  | D  || E  || F  | -->
    <Row>
        <Key android:codes="52"    android:keyLabel="4" android:keyEdgeFlags="left" android:isRepeatable="true"/>
        <Key android:codes="53"    android:keyLabel="5" android:isRepeatable="true"/>
        <Key android:codes="54"    android:keyLabel="6" android:isRepeatable="true"/>

        <Key android:codes="68" android:keyLabel="D" android:isRepeatable="true" android:horizontalGap="10%p" />
        <Key android:codes="69" android:keyLabel="E" android:isRepeatable="true"  />
        <Key android:codes="70" android:keyLabel="F" android:isRepeatable="true"  />
    </Row>

    <!-- | 1  || 2  || 3  |  | <  || >  || ENT| -->
    <Row>
        <Key android:codes="49"    android:keyLabel="1" android:keyEdgeFlags="left" android:isRepeatable="true"  />
        <Key android:codes="50"    android:keyLabel="2" android:isRepeatable="true"  />
        <Key android:codes="51"    android:keyLabel="3" android:isRepeatable="true"  />

        <Key android:codes="55002" android:keyLabel="&#8592;" android:isRepeatable="true" android:horizontalGap="10%p" />
        <Key android:codes="55003" android:keyLabel="&#8594;" android:isRepeatable="true" />
        <Key android:codes="55005" android:keyLabel="&#8629;" android:isRepeatable="true" />
    </Row>

    <!-- | 00 || 0  || FF |  | DEL|| CLR|| HID| -->
    <Row>
        <Key android:codes="-101"    android:keyLabel="00" android:keyEdgeFlags="left" android:isRepeatable="true"/>
        <Key android:codes="48"    android:keyLabel="0" android:isRepeatable="true"/>
        <Key android:codes="-102"    android:keyLabel="FF" android:isRepeatable="true"/>

        <Key android:codes="-5" android:keyLabel="&#8656;" android:isRepeatable="true" android:horizontalGap="10%p" />
        <Key android:codes="-103" android:keyLabel="✖" android:isRepeatable="true"  />
        <Key android:codes="-3" android:keyLabel="▼" android:isRepeatable="true"  />
    </Row>

</Keyboard>